# Include documentation and licensing
include README.md
include LICENSE
include CHANGELOG.md
include CODE_OF_CONDUCT.md
include CONTRIBUTING.md
include SECURITY.md

# Include examples directory - use graft to include everything
graft examples

# Exclude internal/development files by pattern
global-exclude *.sh
global-exclude test_*.py
global-exclude *_debug.py
global-exclude *-allowlist-*.txt
global-exclude gitleaks-report.json
global-exclude *.backup

# Exclude development files
exclude .gitignore
prune .github
prune .claude
prune repo-plans
prune tests
prune __pycache__
global-exclude *.pyc
global-exclude *.pyo
global-exclude .DS_Store
